#include <stdio.h>
int main() {
   
    int numbers[] = {10, 20, 30, 40, 50};
    int n;
    int sum = 0; 
    float average; 
    n = sizeof(numbers) / sizeof(numbers[0]);
    for (int i = 0; i < n; i++) {
        sum += numbers[i]; 
    }
    average = (float)sum / n;
    printf("The sum of the elements is: %d\n", sum);
    printf("The average of the elements is: %.2f\n", average);
    return 0;
}
