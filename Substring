#include <stdio.h>

int main() {
    int arr[] = {10, 25, 30, 45, 50, 65, 70};
    int n = 7;  // size of array
    int search, i, found = 0;
    
    printf("Array elements: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    printf("\nEnter element to search: ");
    scanf("%d", &search);
    
    // Linear search
    for(i = 0; i < n; i++) {
        if(arr[i] == search) {
            printf("Element %d found at index %d (position %d)\n", search, i, i+1);
            found = 1;
            break;
        }
    }
    
    if(!found) {
        printf("Element %d not found in array\n", search);
    }
    
    return 0;
}
